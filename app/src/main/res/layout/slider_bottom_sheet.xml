<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="150dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <com.improvethenews.projecta.SliderCardView
        android:id="@+id/slider1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"></com.improvethenews.projecta.SliderCardView>

    <com.improvethenews.projecta.SliderCardView
        android:id="@+id/slider2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/slider1"></com.improvethenews.projecta.SliderCardView>

    <com.improvethenews.projecta.SliderCardView
        android:id="@+id/slider3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/slider2"></com.improvethenews.projecta.SliderCardView>

    <com.improvethenews.projecta.SliderCardView
        android:id="@+id/slider4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/slider3"></com.improvethenews.projecta.SliderCardView>

    <com.improvethenews.projecta.SliderCardView
        android:id="@+id/slider5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/slider4"></com.improvethenews.projecta.SliderCardView>

    <com.improvethenews.projecta.SliderCardView
        android:id="@+id/slider6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/slider5"></com.improvethenews.projecta.SliderCardView>

</android.support.constraint.ConstraintLayout>